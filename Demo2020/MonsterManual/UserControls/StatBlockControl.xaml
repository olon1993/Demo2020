<UserControl
    x:Class="Demo2020.MonsterManual.UserControls.StatBlockControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Demo2020.MonsterManual.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="LightGoldenrodYellow">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Row 0  -->
        <Border
            Margin="10"
            BorderBrush="DarkRed"
            BorderThickness="0,0,0,3">
            <Grid Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--  Row 0 : Name  -->
                <TextBlock
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="DarkRed"
                    Text="{Binding Name, FallbackValue=Name}" />

                <!--  Row 1 : Type and Alignment  -->
                <TextBlock Grid.Row="1" FontSize="12">
                    <Run Text="{Binding Size, FallbackValue=Size}" />
                    <Run Text="{Binding MonsterType, FallbackValue=Type}" />
                    <Run Text="{Binding MonsterSubtype, FallbackValue=(Subtype)}" />
                    <Run Text="," />
                    <Run Text="{Binding Alignment, FallbackValue=Alignment}" />
                </TextBlock>

            </Grid>
        </Border>

        <!--  Row 1  -->
        <Border
            Grid.Row="1"
            Margin="10"
            BorderBrush="DarkRed"
            BorderThickness="0,0,0,3">
            <Grid Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--  Row 0 : Armor Class  -->
                <TextBlock FontSize="12" Foreground="DarkRed">
                    <Run FontWeight="Bold" Text="Armor Class" />
                    <Run Text="{Binding ArmorClass, FallbackValue=ArmorClass}" />
                    <Run Text="{Binding ArmorType, FallbackValue=(ArmorType)}" />
                </TextBlock>

                <!--  Row 1 : Hit Points  -->
                <TextBlock
                    Grid.Row="1"
                    FontSize="12"
                    Foreground="DarkRed">
                    <Run FontWeight="Bold" Text="Hit Points" />
                    <Run Text="{Binding HitPoints, FallbackValue=HitPoints}" />
                    <Run Text="{Binding HitPointsCalculation, FallbackValue=(1d2+3)}" />
                </TextBlock>

                <!--  Row 2 : Speed  -->
                <DockPanel Grid.Row="2">
                    <TextBlock
                        DockPanel.Dock="Left"
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="DarkRed"
                        Text="Speed" />

                    <ItemsControl DockPanel.Dock="Left" ItemsSource="{Binding Speed}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="12" Foreground="DarkRed">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Type.Length, Converter={StaticResource IsGreaterThanValueConverter}, ConverterParameter=0}" Value="True">
                                                        <Setter Property="Text" Value=", " />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock FontSize="12" Foreground="DarkRed">
                                        <Run Text="{Binding Type}" />
                                        <Run Text="{Binding Value}" />
                                        <Run Text="ft." />
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </DockPanel>

            </Grid>
        </Border>

        <!--  Row 2  -->
        <Border
            Grid.Row="2"
            Margin="10"
            BorderBrush="DarkRed"
            BorderThickness="0,0,0,3">
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--  Col 0 : Strength  -->
                <TextBlock
                    FontSize="12"
                    Foreground="DarkRed"
                    TextAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding StrengthModifier, Converter={StaticResource IsGreaterThanValueConverter}, ConverterParameter=0}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <Run FontWeight="Bold" Text="STR" />
                    <LineBreak />
                    <Run Text="{Binding Strength, FallbackValue=STR}" />
                    <Run Text="(+" />
                    <Run Text="{Binding StrengthModifier, FallbackValue=0}" />
                    <Run Text=")" />
                </TextBlock>

                <TextBlock
                    FontSize="12"
                    Foreground="DarkRed"
                    TextAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding StrengthModifier, Converter={StaticResource IsGreaterThanValueConverter}, ConverterParameter=0}" Value="False">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <Run FontWeight="Bold" Text="STR" />
                    <LineBreak />
                    <Run Text="{Binding Strength, FallbackValue=STR}" />
                    <Run Text="(" />
                    <Run Text="{Binding StrengthModifier, FallbackValue=0}" />
                    <Run Text=")" />
                </TextBlock>

                <!--  Col 1 : Dexterity  -->
                <TextBlock
                    Grid.Column="1"
                    FontSize="12"
                    Foreground="DarkRed"
                    TextAlignment="Center">
                    <Run FontWeight="Bold" Text="DEX" />
                    <LineBreak />
                    <Run Text="{Binding Dexterity, FallbackValue=DEX}" />
                    <Run Text="(+" />
                    <Run Text="{Binding DexterityModifier, FallbackValue=0}" />
                    <Run Text=")" />
                </TextBlock>

                <!--  Col 2 : Constitution  -->
                <TextBlock
                    Grid.Column="2"
                    FontSize="12"
                    Foreground="DarkRed"
                    TextAlignment="Center">
                    <Run FontWeight="Bold" Text="CON" />
                    <LineBreak />
                    <Run Text="{Binding Constitution, FallbackValue=CON}" />
                    <Run Text="(+" />
                    <Run Text="{Binding ConstitutionModifier, FallbackValue=0}" />
                    <Run Text=")" />
                </TextBlock>

                <!--  Col 3 : Intellect  -->
                <TextBlock
                    Grid.Column="3"
                    FontSize="12"
                    Foreground="DarkRed"
                    TextAlignment="Center">
                    <Run FontWeight="Bold" Text="INT" />
                    <LineBreak />
                    <Run Text="{Binding Intellect, FallbackValue=INT}" />
                    <Run Text="(+" />
                    <Run Text="{Binding IntellectModifier, FallbackValue=0}" />
                    <Run Text=")" />
                </TextBlock>

                <!--  Col 4 : Wisdom  -->
                <TextBlock
                    Grid.Column="4"
                    FontSize="12"
                    Foreground="DarkRed"
                    TextAlignment="Center">
                    <Run FontWeight="Bold" Text="WIS" />
                    <LineBreak />
                    <Run Text="{Binding Wisdom, FallbackValue=WIS}" />
                    <Run Text="(+" />
                    <Run Text="{Binding WisdomModifier, FallbackValue=0}" />
                    <Run Text=")" />
                </TextBlock>

                <!--  Col 5 : Charisma  -->
                <TextBlock
                    Grid.Column="5"
                    FontSize="12"
                    Foreground="DarkRed"
                    TextAlignment="Center">
                    <Run FontWeight="Bold" Text="CHA" />
                    <LineBreak />
                    <Run Text="{Binding Charisma, FallbackValue=CHA}" />
                    <Run Text="(+" />
                    <Run Text="{Binding CharismaModifier, FallbackValue=0}" />
                    <Run Text=")" />
                </TextBlock>

            </Grid>
        </Border>

