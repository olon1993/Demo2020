<UserControl
    x:Class="Demo2020.Equipment.UserControls.EditEquipmentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Demo2020.Equipment.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="600"
    mc:Ignorable="d">
    <Grid Background="LightGoldenrodYellow">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Row 0  -->
        <Image
            Grid.Row="0"
            Grid.RowSpan="4"
            Grid.Column="1"
            Height="240"
            VerticalAlignment="Top"
            Source="{Binding ImageSource}" />

        <Border
            Margin="10"
            BorderBrush="DarkRed"
            BorderThickness="0,0,0,3">
            <Grid Margin="0,0,0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--  Row 0 : Name  -->
                <TextBox
                    Margin="36,0,0,10"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="DarkRed"
                    Text="{Binding Name, FallbackValue=Name}" />

                <!--  Row 1 : Type and Alignment  -->
                <DockPanel Grid.Row="1">
                    <TextBox
                        Margin="2"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        Text="{Binding EquipmentCategory.Name, FallbackValue=EquipmentCategory}" />
                    <TextBlock Margin="3,0,0,0" Text="(" />
                    <TextBox
                        Margin="2"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        Text="{Binding GearCategory.Name}" />
                    <TextBox
                        Margin="2"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        Text="{Binding ToolCategory}" />
                    <TextBox
                        Margin="2"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        Text="{Binding WeaponCategory}" />
                    <TextBox
                        Margin="2"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        Text="{Binding ArmorCategory}" />
                    <TextBox
                        Margin="2"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        Text="{Binding VehicleCategory}" />
                    <TextBlock Margin="0" Text=")" />
                </DockPanel>

            </Grid>
        </Border>

        <!--  Row 1  -->
        <Border
            Grid.Row="1"
            Margin="10"
            BorderBrush="DarkRed"
            BorderThickness="0,0,0,3">
            <Grid Margin="0,0,0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--  Row 0 : Damage  -->
                <DockPanel>
                    <TextBlock
                        Margin="2"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="DarkRed">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding EquipmentCategory.Name, UpdateSourceTrigger=PropertyChanged}" Value="Weapon">
                                        <Setter Property="Text" Value="Damage" />
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBox
                        Margin="2"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        Foreground="DarkRed"
                        Text="{Binding Damage.DamageDice}">
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding EquipmentCategory.Name, UpdateSourceTrigger=PropertyChanged}" Value="Weapon">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBox
                        Margin="2"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        Foreground="DarkRed"
                        Text="{Binding Damage.DamageType.Name}">
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding EquipmentCategory.Name, UpdateSourceTrigger=PropertyChanged}" Value="Weapon">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </DockPanel>

                <!--  Row 1 : Armor Class  -->
                <DockPanel Grid.Row="1">
                    <TextBlock
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="DarkRed">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding EquipmentCategory.Name, UpdateSourceTrigger=PropertyChanged}" Value="Armor">
                                        <Setter Property="Text" Value="Armor Class" />
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBox
                        Margin="2"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        Foreground="DarkRed">
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding EquipmentCategory.Name, UpdateSourceTrigger=PropertyChanged}" Value="Armor">
                                        <Setter Property="Text" Value="{Binding ArmorClass.Base}" />
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </DockPanel>

                <!--  Row 2 : Weight  -->
                <DockPanel Grid.Row="2">
                    <TextBlock
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="DarkRed"
                        Text="Weight" />

                    <TextBox
                        Margin="2"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        Foreground="DarkRed"
                        Text="{Binding Weight}" />

                    <TextBlock
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        Foreground="DarkRed"
                        Text="lbs" />
                </DockPanel>

                <!--  Row 3 : Value  -->
                <DockPanel Grid.Row="3">
                    <TextBlock
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="DarkRed"
                        Text="Cost" />

                    <TextBox
                        Margin="2"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        Foreground="DarkRed"
                        Text="{Binding Cost.Quantity}" />

                    <TextBox
                        Margin="2"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        Foreground="DarkRed"
                        Text="{Binding Cost.Unit}" />

                </DockPanel>

            </Grid>
        </Border>

        <!--  Row 2  -->
        <Border
            Grid.Row="2"
            Margin="10"
            BorderBrush="DarkRed"
            BorderThickness="0,0,0,3">
            <Border.Style>
                <Style TargetType="{x:Type Border}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Description.Count}" Value="0">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid Margin="0,0,0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--  Row 0 : Subtitle  -->
                <TextBlock
                    DockPanel.Dock="Left"
                    FontSize="12"
                    FontWeight="Bold"
                    Foreground="DarkRed"
                    Text="Description" />

                <!--  Row 1 : Description  -->
                <ItemsControl
                    Grid.Row="1"
                    Margin="3"
                    ItemsSource="{Binding Description}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBox
                                Margin="2"
                                Text="{Binding Text, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                TextWrapping="Wrap" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Button
                    Grid.Row="2"
                    Grid.Column="2"
                    Height="20"
                    Margin="3,0,0,10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{Binding AddDescriptionCommand}"
                    DockPanel.Dock="Left">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Image Source="/Demo2020;component/Resources/Images/Add.png" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="3,0,0,0"
                            DockPanel.Dock="Right"
                            FontWeight="Bold"
                            Text="Add Description" />
                    </Grid>
                </Button>

            </Grid>
        </Border>

    </Grid>
</UserControl>
